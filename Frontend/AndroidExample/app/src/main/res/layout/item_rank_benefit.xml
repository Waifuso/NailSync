<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Benefit Status Indicator -->
        <View
            android:id="@+id/benefitStatusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_shape_available"/>

        <!-- Benefit Icon -->
        <ImageView
            android:id="@+id/benefitIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_default_benefit"
            android:contentDescription="Benefit Icon"/>

        <!-- Benefit Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/benefitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Birthday Service"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/benefitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Enjoy a complimentary service on your birthday"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Benefit Status -->
        <TextView
            android:id="@+id/benefitStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="@color/colorSuccess"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>